generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id        String   @id @default(cuid())
  name      String
  type      String
  price     Float
  images    String[] // Array of image URLs
  capacity  Int
  bookings  Booking[]
}

model Booking {
  id         String   @id @default(cuid())
  room       Room     @relation(fields: [roomId], references: [id])
  roomId     String
  customer   String
  email      String
  phone      String
  checkIn    DateTime
  checkOut   DateTime
  createdAt  DateTime @default(now())
}
